@model SuggestionSystem.BaseSystemModel.Model.DTO.UserDTO

@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Login</h2>


@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <div class="form-group">
            @Html.Label("نام کاربری(کد ملی یا کد پرسنلی)")
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("کلمه عبور")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="ورود" class="btn btn-default" />*@
                <button type="button" onclick="Login()" value="ورود" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        function Login() {
            var userName = $("#UserName").val();
            var password = $("#Password").val();
            if (userName.trim() == "" || password.trim() == "") {
                ShowAlert("نام کاربر و کلمه عبور را وارد کنید");
            }

            if (isNaN(userName)) {
                ShowAlert("نام کاربری معتبر نمیباشد");
            }

            $.ajax({
                url: "demo_test.txt" ,
                type: "POST",
                data : $("form").serialize(),
                success: function (result) {
                    if (result.Status) {
                        ShowAlert("با موفقیت وارد سیستم شدید", "success", 3000);
                        setTimeout(function () {
                            window.location = '@Html.Action("Index","Home")';
                        }, 2000);
                    }
                    else {
                        ShowAlert(result.Message);
                    }
                },
                error: function (er) {
                    ShowAlert("خطا در ارتباط با سرور، لطفا مجددا تلاش کنید");
                }
            });

        }
    });

</script>

